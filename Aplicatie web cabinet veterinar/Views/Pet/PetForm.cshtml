@using (Html.BeginForm("Save", "Pet"))
{
	<div class="form-group">
		@Html.LabelFor(m => m.Name)
		@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.Name)
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Species)
		@Html.TextBoxFor(m => m.Species, new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.Species)
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.BirthDate)
		@Html.TextBoxFor(m => m.BirthDate, "{0:d MMM yyyy}", new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.BirthDate)
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Breed)
		@Html.TextBoxFor(m => m.Breed, new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.Breed)
	</div>
